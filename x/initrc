#!/bin/sh

### ---
### Nicities
### ---
# imitate right mouse button on double tap
synclient TapButton2=3

# load xresources (colors etc)
xrdb ~/.Xresources

# cursor
xsetroot -cursor_name left_ptr

# background
xsetroot -solid "#`qxr background`"


### ---
### Tools
### ---

# keybindings
SXHKD_SHELL="sh" sxhkd &
SXHKD_SHELL="sh" sxhkd -c .config/sxhkd/nowm &

# focusing daemon
focusd &

# information
ibar &

# hang (run `stop x` to quit)
~/bin/hang x

### ---
### deinit
### ---

killall bar
